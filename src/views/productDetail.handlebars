<div class="products-container">
  <h1>Detalle del producto</h1>

  {{#if findProduct}}
    {{#with findProduct}}
      <div id="card-product" class="card">

        <div>Nombre: {{title}}</div>
        <div>Descripcion:{{description}}</div>
        <div>Precio: ${{price}}</div>
        <div>Imagen: {{thumbnail}}</div>
        <div>Codigo: {{code}}</div>
        <div>Stock: {{stock}} </div>
        <div>Category: {{category}}</div>

      </div>
      <button
        id="add-to-cart"
        type="submit"
        data-pid="{{id}}"
        data-cid="{{cid}}"
        class="btn btn-primary"
      >Agregar al carrito</button>

    {{/with}}

  {{else}}
    <p>El producto no existe o no se encontr√≥.</p>
  {{/if}}

</div>

<script src="/js/addProductToCart.js"></script>