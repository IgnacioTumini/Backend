<!--IMPRIMIR LA LISTA DE PRODUCTOS HASTA EL MOMENTO-->

<div class="products-container">
  <h1>Productos en stock</h1>

  {{#each products}}
    <div id={{this._id}} class="card">

      <div>Nombre: {{this.title}}</div>
      <div>Descripcion: {{this.description}}</div>
      <div>Precio: ${{this.price}}</div>
      <div>Category: {{this.category}}</div>
      <div>Imagen: {{this.thumbnail}}</div>
      <div>Codigo: {{this.code}}</div>
      <div>Stock: {{this.stock}}</div>
      <a href="/product/{{this._id}}"><button class="btn btn-primary">Ver m√°s</button></a>
    </div>
  {{/each}}

  <div>
    {{#if response.payload.hasPrevPage}}
      <a href="{{response.payload.prevPageURL}}"><button>Anterior</button></a>
    {{/if}}
    {{#if response}}<span>Pagina
        {{response.payload.page}}
        de
        {{response.payload.totalPages}}</span>
    {{/if}}
    {{#if response.payload.hasNextPage}}
      <a href="{{response.payload.nextPageURL}}"><button>Siguiente</button></a>
    {{/if}}
  </div>

</div>